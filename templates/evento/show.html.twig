{% extends 'adminbase.html.twig' %}

{% block title %}Evento{% endblock %}

{% block body %}
    <h1>Evento</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evento.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ evento.title }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ evento.descripcion }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ evento.direccion }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ evento.dia|date('d-m-Y') }}</td>
            </tr>
            <tr>
                <th>Requeridos</th>
                <td>{{ evento.requeridos }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_evento_index') }}">back to list</a>

    <a href="{{ path('admin_evento_edit', {'id': evento.id}) }}">edit</a>

    {{ include('evento/_delete_form.html.twig') }}
{% endblock %}
