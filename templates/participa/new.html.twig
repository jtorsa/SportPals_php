{% extends 'base.html.twig' %}

{% block title %}New Participa{% endblock %}

{% block body %}
    <h1>Create new Participa</h1>

    {{ include('participa/_form.html.twig') }}

    <a href="{{ path('participa_index') }}">back to list</a>

    <script>
        var $sport = $('#participa_deporte');
        
        $sport.change(function() {
            var $form = $(this).closest('form');
            var data = {};
            data[$sport.attr('name')] = $sport.val();
            $.ajax({
                url : $form.attr('action'),
                type: $form.attr('method'),
                data : data,
                success: function(html) {
                    $('#participa_nivel').replaceWith(
                        $(html).find('#participa_nivel')
                    );
                }
            });
        });
</script>
{% endblock %}
